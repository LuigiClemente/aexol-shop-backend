# Server URLs
API_URL=https://bao.gutricious.store  # Keep if this is your development API
STOREFRONT_URL=https://gutricious.store  # Replace with production domain

# Security
COOKIE_SECRET=generate-a-long-random-string-here  # Very important for security

# Superadmin credentials (DON'T use these in production!)
SUPERADMIN_USERNAME=superadmin  # Consider making this less obvious
SUPERADMIN_PASSWORD=replace-with-strong-password

# Database Configuration (Adjust if not using localhost and PostgreSQL defaults)
DB_HOST=localhost 
DB_PORT=5432 
DB_NAME=vendure  # You may want a more specific production database name
DB_USERNAME=vendure   
DB_PASSWORD=vendure
DB_SCHEMA=public  # Use 'public' if you haven't set up custom schemas

# MinIO (S3-compatible storage for files and images)
MINIO_ACCESS_KEY_ID=vendure
MINIO_SECRET_ACCESS_KEY=vendure123
MINIO_ENDPOINT=http://localhost:9000

# SMTP Configuration (for sending emails)
SMTP_USERNAME=your-smtp-username@example.com  
SMTP_PASSWORD=your-smtp-password 
SMTP_HOST=smtp.example.com
SMTP_PORT=587  # Or 465 if using secure SMTP

APP_ENV=dev
